{
  "name": "jobmanagement",
  "version": "1.0.0",
  "description": "Project share work",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "install-dependencies": "npm run install-client && npm install",
    "setup-production": "npm run install-client && npm run build-client && npm install",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "server": "nodemon server --ignore client",
    "client": "npm start --prefix client",
    "start": "concurrently --kill-others-on-fail \" npm run server\" \" npm run client\"",
    "test-register": "ava ./test/register.test.js",
    "test-login": "ava ./test/login.test.js",
    "test-addjob": "ava ./test/addjob.test.js",
    "test-updatejob": "ava ./test/updatejob.test.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "ava": "^6.1.2",
    "concurrently": "^8.2.2",
    "esm": "^3.2.25",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sinon": "^17.0.1",
    "supertest": "^6.3.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.2.2",
    "morgan": "^1.10.0",
    "validator": "^13.11.0",
    "xss-clean": "^0.1.4"
  }
}